                                        <?php if(isset($affiliationAuthor['id'])):?>
                                            <?php foreach ($affiliationAuthor['id'] as $values):?><?php if(isset($values['id'])):?><institution_id type="ROR"><?=$values['id']?></institution_id><?php endif;?><?php endforeach;?><?php endif;?><?php if(isset($affiliationAuthor['name'])):?><institution_name><?= $this->escape($affiliationAuthor['name']) ?></institution_name><?php endif;?>
